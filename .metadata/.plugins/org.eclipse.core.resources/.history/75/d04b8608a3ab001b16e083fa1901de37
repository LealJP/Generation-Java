
public class TestaConversao {

		public static void main(String[] args) {
			
			double salario = 1270.50;
			int valor = (int) salario; //(tipo variável) chama type casting --> faz a "conversao" da variavel salario double 
									   //caber na variavel inteira valor
			System.out.println(valor); //saida = 1250 --> um valor inteiro
			
			//Tipos primitivos: int, double, long, short, byte
			
			//int só "aguenta" numeros de 32 bits (2 bilhões)
			long numeroGrande = 23659998959556L; //cabe um número grande de 64 (2^64)
			short valorPequeno =  32767; // menor que o int (16bits = 2^16/2 -1);
			byte b = 127; //(2^8)/2 - 1
			
			double valor1 = 0.2;
			double valor2 = 0.1;
			double total = valor1 + valor2;
			System.out.println(total); //saída = 0.30000000000000004
			
			float pontoFlutuante = 3.14f; //float também é uma variável do tipo flutuante
			float pontoFlutuanteExemplo = (float) 3.14; //3.14 é do tipo double, por tanto
														//devemos transformar em tipo float
			
			float total2 = (float) total;
			System.out.println(total2); //sáida = 0.3, por tanto é uma bom recurso para não
									    //obter a saída "absurda" 0.30000000000000004
			
		}
}
