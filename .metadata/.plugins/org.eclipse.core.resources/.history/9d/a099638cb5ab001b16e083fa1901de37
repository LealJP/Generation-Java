
public class TesteCondicional2 {

	public static void main(String[] args) {
		System.out.println("Testando Condicionais");
		int idade = 20;
		int quantidadePessoas = 1;
		boolean acompanhado = true; //variável boolean aceita só 2 valores true ou false
		
		if (idade >= 18 || quantidadePessoas >= 2) { // || = or (operador lógico ou)
			System.out.println("Seja bem vindo");
		} else {
			System.out.println("Infelizmente você não pode entrar");	
		}
		
		if (idade >= 18 && acompanhado) { // && = and (operador lógico e)
			System.out.println("Seja bem vindo");
		} else {
			System.out.println("Infelizmente você não pode entrar");	
		}
	}
}
